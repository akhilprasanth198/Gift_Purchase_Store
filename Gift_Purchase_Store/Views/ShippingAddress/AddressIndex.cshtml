@model IEnumerable<Gift_Purchase_Store.Models.ShippingAddress>

@{
    ViewData["Title"] = "Shipping Addresses";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Custom Styles for the Shipping Address Page */
        .address-card {
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
            width: 100%;
        }

        .address-card-header {
            background-color: #055160;
            color: white;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            padding: 15px;
        }

        .address-card-body {
            background-color: #f8f9fa;
            padding: 20px;
            border-bottom-left-radius: 8px;
            border-bottom-right-radius: 8px;
        }

        .table th {
            background-color: #055160;
            color: white;
        }

        .table td {
            font-size: 1rem;
        }

        .btn-custom {
            background-color: #055160;
            color: white;
            border-color: #055160;
        }

            .btn-custom:hover {
                background-color: #043f4f;
                border-color: #043f4f;
            }

        .alert-info {
            background-color: #cff4fc;
            border-color: #b6effb;
        }

        .action-links {
            font-size: 0.9rem;
        }

        /* Custom positioning for the "Add new" button */
        .add-new-btn {
            position: absolute;
            top: 20px;
            right: 20px;
            background-color: #055160;
            color: white;
        }
    </style>
</head>
<body>
    <div class="container mt-5 position-relative">
        <h2 class="text-center mb-4">Shipping Addresses</h2>

        <!-- Add New Button -->
        <a href="@Url.Action("Save", "ShippingAddress")" class="btn btn-custom add-new-btn" style="background-color:darkcyan;">Add new</a>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                <strong>No saved addresses!</strong> <a href="@Url.Action("Save", "ShippingAddress")">Add a new address</a>.
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var address in Model)
                {
                    <div class="col-12">
                        <div class="address-card">
                            <div class="address-card-header">
                                <h5>Address</h5>
                            </div>
                            <div class="address-card-body">
                                <p><strong>Address Line 1:</strong> @address.AddressLine1</p>
                                <p><strong>City:</strong> @address.City</p>
                                <p><strong>State:</strong> @address.State</p>
                                <p><strong>Pin Code:</strong> @address.ZipCode</p>
                                <p><strong>Phone Number:</strong> @address.PhoneNumber</p>

                                <div class="action-links">
                                    <a href="@Url.Action("Delete", "ShippingAddress", new { id = address.ShippingAddressId })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this address?')">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
