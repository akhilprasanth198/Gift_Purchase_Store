@model OrderViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Cart</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Custom Styles for My Cart Page */
        .cart-card {
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

        .cart-card-header {
            background-color: #055160;
            color: white;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            padding: 15px;
        }

        .cart-card-body {
            background-color: #f8f9fa;
            padding: 20px;
            border-bottom-left-radius: 8px;
            border-bottom-right-radius: 8px;
        }

        .table th {
            background-color: #055160;
            color: white;
        }

        .table td {
            font-size: 1rem;
        }

        .form-group {
            margin-top: 15px;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
            border-color: #6c757d;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }

        .btn-primary {
            background-color: #055160;
            color: white;
            border-color: #055160;
        }

            .btn-primary:hover {
                background-color: #043f4f;
                border-color: #043f4f;
            }

        .order-summary {
            font-weight: bold;
            margin-top: 20px;
            background-color: #e9f7fb;
            padding: 15px;
            border-radius: 8px;
        }

        .alert-info {
            background-color: #cff4fc;
            border-color: #b6effb;
        }

        .no-items-message {
            font-size: 1.2rem;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">My Cart</h1>

        <form asp-action="PlaceOrder" method="post">
            <div class="cart-card">
                <div class="cart-card-header">
                    <h3>Order Items</h3>
                </div>
                <div class="cart-card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>₹@item.Price</td>
                                    <td>₹@(item.Price * item.Quantity)</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3" class="text-end"><strong>Total Amount:</strong></td>
                                <td>₹@Model.TotalAmount</td>
                            </tr>
                        </tfoot>
                    </table>

                    <!-- Shipping Address Selection -->
                    <h3>Shipping Address</h3>
                    <div class="form-group">
                        <label for="selectedAddressId">Select a Shipping Address:</label>
                        <select id="selectedAddressId" name="selectedAddressId" class="form-control" required>
                            @if (ViewBag.ShippingAddresses is List<ShippingAddress> addresses && addresses.Any())
                            {
                                @foreach (var address in addresses)
                                {
                                    <option value="@address.ShippingAddressId">
                                        @address.AddressLine1, @address.City, @address.State, @address.ZipCode
                                    </option>
                                }
                            }
                            else
                            {
                                <option disabled>No shipping addresses available</option>
                            }
                        </select>
                    </div>

                    <!-- Manage Shipping Address Button -->
                    <div class="form-group mt-3" >
                        <a href="@Url.Action("AddressIndex", "ShippingAddress")" class="btn btn-secondary" style="background-color:darkcyan;">Manage Shipping Address</a>
                    </div>

                    <!-- Payment Method Note -->
                    <div class="form-group mt-3">
                        <p><strong>Payment Method:</strong> Cash on Delivery (COD) only</p>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Place Order</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
