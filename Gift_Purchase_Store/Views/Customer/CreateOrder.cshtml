@model OrderViewModel

@{
    ViewBag.Title = "Create Order";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Custom CSS for Create Order Page */
        .fixed-image-height {
            height: 200px;
            object-fit: cover;
            border-bottom: 1px solid #ddd;
        }

        .product-card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            }

        .card-title {
            font-size: 1.2rem;
            font-weight: 600;
        }

        .card-text {
            font-size: 1rem;
            margin: 0.5rem 0;
        }

        .input-group {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .input-group input {
                flex: 1;
                border-top-left-radius: 5px;
                border-bottom-left-radius: 5px;
            }

            .input-group .btn {
                border-top-right-radius: 5px;
                border-bottom-right-radius: 5px;
            }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center my-4">Create Order</h1>

        <div class="row g-4">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-4 col-lg-3">
                    <div class="card product-card shadow-sm">
                        <img src="@Url.Content("~/images/" + product?.ImageUrl)" class="card-img-top fixed-image-height" alt="@product.Description">
                        <div class="card-body">
                            <h5 class="card-title text-truncate">@product.Name</h5>
                            <p class="card-text fw-bold">₹@product.Price</p>
                            <form asp-action="AddItem" method="post">
                                <input type="hidden" name="prodId" value="@product.ProductId" />
                                <div class="input-group mb-3">
                                    <input type="number" name="prodQty" class="form-control" placeholder="Quantity" min="1" required>
                                    <button class="btn btn-primary" type="submit">Add</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
