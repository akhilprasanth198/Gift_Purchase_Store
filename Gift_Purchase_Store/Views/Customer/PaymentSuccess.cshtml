@model OrderViewModel

<h1>Order Confirmation</h1>
<p>Your order has been successfully placed!</p>

<h3>Order Details</h3>
<ul>
    <li><strong>Order Date:</strong> @DateTime.Now.ToString("yyyy-MM-dd")</li>
    <li><strong>Total Amount:</strong> @Model.TotalAmount</li>
    <li><strong>Payment Method:</strong> Cash on Delivery</li>
</ul>
<div>
    <h4>Shipping Address</h4>
    <p>@Model.AddressLine1</p>
    <p>@Model.City, @Model.State - @Model.ZipCode</p>
    <p>Phone: @Model.PhoneNumber</p>
</div>


<h4>Ordered Items</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@(item.Price * item.Quantity)</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("ViewOrders", "Customer")" class="btn btn-primary">View All Orders</a>
