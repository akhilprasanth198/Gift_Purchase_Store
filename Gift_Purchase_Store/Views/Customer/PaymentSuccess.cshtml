@model OrderViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Custom Styles for Order Confirmation */
        .order-details {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }

            .order-details h3 {
                color: #055160;
                font-size: 1.5rem;
            }

            .order-details ul {
                list-style-type: none;
                padding: 0;
            }

            .order-details li {
                margin-bottom: 10px;
                font-size: 1.1rem;
            }

        .shipping-address {
            background-color: #e9f7fb;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 30px;
        }

            .shipping-address address {
                font-size: 1.1rem;
                color: #333;
            }

        .order-items-table {
            margin-top: 20px;
            margin-bottom: 30px;
        }

            .order-items-table th {
                background-color: #055160;
                color: white;
            }

        .btn-primary {
            background-color: #055160;
            border-color: #055160;
        }

            .btn-primary:hover {
                background-color: #043f4f;
                border-color: #043f4f;
            }

        .confirmation-message {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 30px;
            color: #28a745;
        }

    </style>
</head>
<body>
    <div class="container my-5">
        <div class="confirmation-message text-center">
            <h1>Order Confirmation</h1>
            <p>Your order has been successfully placed!</p>
        </div>

        <div class="order-details">
            <h3>Order Details</h3>
            <ul>
                <li><strong>Order Date:</strong> @DateTime.Now.ToString("yyyy-MM-dd")</li>
                <li><strong>Total Amount:</strong> ₹@Model.TotalAmount</li>
                <li><strong>Payment Method:</strong> Cash on Delivery</li>
            </ul>
        </div>

        <div class="shipping-address">
            <h3>Shipping Address</h3>
            @if (Model.ShippingAddress != null)
            {
                <address>
                    <p>@Model.ShippingAddress.AddressLine1</p>
                    <p>@Model.ShippingAddress.City, @Model.ShippingAddress.State - @Model.ShippingAddress.ZipCode</p>
                    <p><strong>Phone:</strong> @Model.ShippingAddress.PhoneNumber</p>
                </address>
            }
            else
            {
                <p><em>No shipping address available.</em></p>
            }
        </div>

        <h4>Ordered Items</h4>
        <table class="table table-bordered order-items-table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderItems)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>₹@item.Price</td>
                        <td>₹@(item.Price * item.Quantity)</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center">
            <a href="@Url.Action("MyOrders", "Customer")" class="btn btn-primary">View All Orders</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
