@model IEnumerable<Gift_Purchase_Store.Models.OrderViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Orders</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Custom Styles for My Orders Page */
        .order-card {
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 30px;
        }

        .order-card-header {
            background-color: #055160;
            color: white;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            padding: 15px;
        }

        .order-card-body {
            background-color: #f8f9fa;
            padding: 20px;
            border-bottom-left-radius: 8px;
            border-bottom-right-radius: 8px;
        }

        .table th {
            background-color: #055160;
            color: white;
        }

        .table td {
            font-size: 1rem;
        }

        .order-summary {
            font-weight: bold;
            margin-top: 20px;
            background-color: #e9f7fb;
            padding: 15px;
            border-radius: 8px;
        }

        .alert-info {
            background-color: #cff4fc;
            border-color: #b6effb;
        }

        .btn-view {
            background-color: #055160;
            color: white;
            border-color: #055160;
        }

            .btn-view:hover {
                background-color: #043f4f;
                border-color: #043f4f;
            }

        .no-orders-message {
            font-size: 1.2rem;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Your Orders</h1>

        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                <strong>No orders found!</strong> It seems you haven't placed any orders yet.
            </div>
        }
        else
        {
            @foreach (var order in Model)
            {
                <div class="card order-card">
                    <div class="card-header order-card-header">
                        <h4>Order ID: @order.OrderId</h4>
                    </div>
                    <div class="card-body order-card-body">
                        <p><strong>Order Date:</strong> @order.OrderDate.ToString("yyyy-MM-dd")</p>
                        <p><strong>Total Amount:</strong> ₹@order.TotalAmount</p>

                        <h5>Shipping Address:</h5>
                        <p>
                            @order.ShippingAddress.AddressLine1, @order.ShippingAddress.City,
                            @order.ShippingAddress.State - @order.ShippingAddress.ZipCode
                        </p>
                        <p><strong>Phone Number:</strong> @order.ShippingAddress.PhoneNumber</p>

                        <h5>Order Items</h5>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in order.OrderItems)
                                {
                                    <tr>
                                        <td>@item.ProductName</td> <!-- Referencing ProductName -->
                                        <td>@item.Quantity</td>
                                        <td>₹@item.Price</td>
                                        <td>₹@(item.Quantity * item.Price)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
