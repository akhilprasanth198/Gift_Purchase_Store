@page
@model Gift_Purchase_Store.Areas.Identity.Pages.Account.RegisterModel
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Register";
}

<div class="auth-container">
    <div class="auth-card">
        <h2 class="auth-title">Register</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Input.Email">Email Address</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="error-message"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" />
                <span asp-validation-for="Input.Password" class="error-message"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="error-message"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Role">Role</label>
                <select asp-for="Input.Role" class="form-control">
                    <option value="Customer">Customer</option>
                </select>
            </div>
            <button type="submit" class="btn btn-success">Register</button>
        </form>
        <div class="auth-links">
            <a asp-page="/Account/Login">Already have an account? Login</a>
        </div>
    </div>
</div>
